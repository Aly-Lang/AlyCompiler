defun foo () : @integer {
    a : integer = 0
    b : integer = 42

    ptr : @integer
    ptr := &a
    @ptr := 69

    test_ptr : @integer
    test_ptr := &b

    ptrptr : @@integer
    ptrptr := &ptr
    
    @ptrptr := test_ptr
    
    @ptr := 42

    a
}

foo()

